  head
    meta(charset='utf-8')
    //- May be too late. http://mathiasbynens.be/notes/safe-css-hacks
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title Gatorade Fierce - Bold + Intense
    meta(name='description', content='')
    meta(name='keywords', content='')
    meta(name='HandheldFriendly', content='true')
    meta(name='MobileOptimized', content='width')
    meta(name='format-detection', content='telephone=no')
    block stylesheets
      +projectStyle('reset.css')
      +projectStyle('main.css')
    block favicons
      link(rel='shortcut icon', href='/favicon.ico')
      link(rel='apple-touch-icon', href='/apple-touch-icon.png')
    block viewport
      include ../includes/viewport
    block headScripts
      include ../includes/headScripts
  block config
    - pageId = pagevar(pageId) ? pageId : 'mainTemplate'
  - console.log('pageId config:', pageId)
  body(id=pageId, class=pageClasses)
    #wrapper
      block header
        include ../includes/header
      section#mainContent
        block mainContent
      block footer
        include ../includes/footer
    block endScripts
      include ../includes/endScripts